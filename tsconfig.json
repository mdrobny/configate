{
	"compilerOptions": {
		"target": "es2022",
		"module": "NodeNext",
		"moduleResolution": "NodeNext",
		"declaration": true,
		"outDir": "./dist",
		"esModuleInterop": true,
		"allowImportingTsExtensions": true,
		"rewriteRelativeImportExtensions": true,
		"forceConsistentCasingInFileNames": true,
		"strict": true,
		"skipLibCheck": true
	},
	"include": ["src"],
	"exclude": ["node_modules", "**/*.test.ts", "src/testConfigDirs/**/*"]
}
